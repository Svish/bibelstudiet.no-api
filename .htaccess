
# Charset
AddDefaultCharset UTF-8

# Compression
AddOutputFilterByType DEFLATE text/xml text/plain
AddOutputFilterByType DEFLATE application/json application/javascript

# Expiration
ExpiresActive On
ExpiresByType audio/mpeg "access plus 1 week"
ExpiresByType application/pdf "access plus 1 week"
ExpiresByType image/svg+xml "access plus 1 week"
ExpiresByType image/x-icon "access plus 1 week"
ExpiresByType image/png "access plus 1 week"

# Environment
RewriteEngine on
RewriteBase /
SetEnv BASE /
SetEnv ENV prod

# Force HTTPS
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://bibelstudiet.no/$1 [R=301,L]

# Remove www.
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Pretty Urls
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
#RewriteRule .* index.php/$0 [L]
RewriteRule .* index.php?path_uri=/$0 [PT,L,QSA]
